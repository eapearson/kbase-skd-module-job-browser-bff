{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "The Root Schema",
    "required": [
        "time_span",
        "offset",
        "limit"
    ],
    "additionalProperties": false,
    "properties": {
        "time_span": {
            "$id": "#/properties/time_span",
            "type": "object",
            "title": "The time_span Schema",
            "required": [
                "from",
                "to"
            ],
            "properties": {
                "from": {
                    "$id": "#/properties/time_span/properties/from",
                    "type": "integer",
                    "title": "The From Schema",
                    "default": 0,
                    "examples": [
                        0
                    ]
                },
                "to": {
                    "$id": "#/properties/time_span/properties/to",
                    "type": "integer",
                    "title": "The To Schema",
                    "default": 0,
                    "examples": [
                        1000
                    ]
                }
            }
        },
        "offset": {
            "$id": "#/properties/offset",
            "type": "integer",
            "title": "The Offset Schema",
            "default": 0,
            "examples": [
                0
            ]
        },
        "limit": {
            "$id": "#/properties/limit",
            "type": "integer",
            "title": "The Limit Schema",
            "default": 0,
            "examples": [
                100
            ]
        },
        "sort": {
            "$id": "#/properties/sort",
            "type": "array",
            "title": "The Sort Schema",
            "items": {
                "$id": "#/properties/sort/items",
                "type": "object",
                "title": "The Items Schema",
                "required": [
                    "key",
                    "direction"
                ],
                "properties": {
                    "key": {
                        "$id": "#/properties/sort/items/properties/key",
                        "type": "string",
                        "title": "The Key Schema",
                        "default": "",
                        "examples": [
                            "name"
                        ],
                        "pattern": "^(.*)$"
                    },
                    "direction": {
                        "$id": "#/properties/sort/items/properties/direction",
                        "type": "string",
                        "title": "The Direction Schema",
                        "default": "",
                        "examples": [
                            "ascending"
                        ],
                        "pattern": "^(.*)$"
                    }
                }
            }
        },
        "search": {
            "$id": "#/properties/search",
            "type": "object",
            "title": "The Search Schema",
            "required": [
                "terms"
            ],
            "properties": {
                "terms": {
                    "$id": "#/properties/search/properties/terms",
                    "type": "array",
                    "title": "The Terms Schema",
                    "items": {
                        "$id": "#/properties/search/properties/terms/items",
                        "type": "string",
                        "title": "The Items Schema",
                        "default": "",
                        "examples": [
                            "cheese"
                        ],
                        "pattern": "^(.*)$"
                    }
                }
            }
        },
        "filter": {
            "$ref": "base.json#definitions/job_filter"
        },
        "timeout": {
            "type": "integer",
            "default": 0,
            "examples": [
                10000
            ]
        },
        "admin": {
            "type": "integer",
            "enum": [0, 1]
        }
    }
}